  path = "helm/monitoring"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha     = "2961eae9f9cd98dda74e703c5f993ca813fcfacb3b47db3c104fbf43044e124b"
    retries = 0
  }
}
